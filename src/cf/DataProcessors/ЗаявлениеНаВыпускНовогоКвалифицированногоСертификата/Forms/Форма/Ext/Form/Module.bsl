				"ОтправитьЗаявлениеПослеПредупреждения", ЭтотОбъект);
		КонецЕсли;
		
		ПоказатьПредупреждение(ОбработкаПродолжения,
			УстановитьГиперссылку(ОписаниеОшибки, "its.1c.ru", "http://its.1c.ru"));
		
	КонецЕсли;
	
КонецПроцедуры

