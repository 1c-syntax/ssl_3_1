		СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(
		НСтр("ru = 'Поле ""%1"" не заполнено'"), Реквизит.Значение));
		
	Возврат ПараметрыРеквизитаДляПроверки;
	
