		СтруктураУчетнойЗаписи = Новый Структура;
		
		ИмяСвойства = Фабрика["УчетнаяЗаписьЭлектроннойПочты"].Свойства()[0].Имя; // @Non-NLS
		УчетнаяЗаписьXDTO = Фабрика["УчетнаяЗаписьЭлектроннойПочты"][ИмяСвойства]; // @Non-NLS
		
