// Для функции ПоляТаблицы.
Процедура ДополнитьВсеПоля(ВсеПоля, Поля, ИмяТаблицы = "")
	
	Для Каждого Поле Из Поля Цикл
		ПолноеИмяПоля = ИмяТаблицы + Поле.Имя;
		ВсеПоля.Вставить(НРег(ПолноеИмяПоля), ПолноеИмяПоля);
	КонецЦикла;
	
