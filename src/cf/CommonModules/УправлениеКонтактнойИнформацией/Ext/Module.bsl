// Возвращает сведения об адресах в виде структуру частей адреса и кодов КЛАДР.
//
Функция СведенияОбАдресахВВидеПолей(Адреса, ДополнительныеПараметры)
	
	ОбщегоНазначенияКлиентСервер.ПроверитьПараметр("СведенияОбАдресах", "Адреса", Адреса, Тип("Массив"));
	
	Результат = Новый Массив;
	
	Если Адреса.Количество() = 0 Тогда
		Возврат Результат;
	КонецЕсли;
	
	Для ИндексАдреса = 0 По Адреса.ВГраница() Цикл
		
		Адрес = Адреса.Получить(ИндексАдреса);
		
		АдресИзJSON = УправлениеКонтактнойИнформациейСлужебный.JSONВКонтактнуюИнформациюПоПолям(Адрес, Перечисления.ТипыКонтактнойИнформации.Адрес);
		ПоляАдреса = УправлениеКонтактнойИнформациейКлиентСервер.ПоляАдреса();
		
		ПоляАдреса.ТипАдреса   = АдресИзJSON.addressType;
		ПоляАдреса.Комментарий = АдресИзJSON.comment;
		ПоляАдреса.Страна      = АдресИзJSON.country;
		ПоляАдреса.КодСтраны   = АдресИзJSON.countryCode;
		ПоляАдреса.Регион      = АдресИзJSON.area;
		ПоляАдреса.Индекс      = АдресИзJSON.ZIPcode;
		ПоляАдреса.Город       = АдресИзJSON.city;
		ПоляАдреса.Улица       = АдресИзJSON.street;
		
		ПоляАдреса.ДополнительнаяИнформация = АдресИзJSON.houseNumber;
		
		Если ДополнительныеПараметры.Свойство("БезПредставлений") 
		   И ДополнительныеПараметры.БезПредставлений Тогда
			ПоляАдреса.Удалить("Представление");
		Иначе
			ПоляАдреса.Представление = АдресИзJSON.value;
		КонецЕсли;
		
		Результат.Добавить(ПоляАдреса);
		
	КонецЦикла;
	
	Возврат Результат;
	
КонецФункции

