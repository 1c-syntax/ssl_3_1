//
Процедура ПеренестиБезопасноеХранилищеДанныхОбластейДанных() Экспорт
	
	// Не поддерживается работа в модели сервиса.
	Если Не ОбщегоНазначения.ПодсистемаСуществует("ТехнологияСервиса.БазоваяФункциональность") Тогда
		Возврат;
	КонецЕсли;
	
	НачатьТранзакцию();
	
	Попытка
		
		МодульРаботаВМоделиСервиса = ОбщегоНазначения.ОбщийМодуль("РаботаВМоделиСервиса");
		ОбластьДанных = МодульРаботаВМоделиСервиса.ЗначениеРазделителяСеанса();
		
		НаборЗаписей = РегистрыСведений.БезопасноеХранилищеДанныхОбластейДанных.СоздатьНаборЗаписей();
		НаборЗаписей.Отбор.ОбластьДанныхВспомогательныеДанные.Установить(ОбластьДанных);
		НаборЗаписейУдалить = РегистрыСведений.УдалитьБезопасноеХранилищеДанныхОбластейДанных.СоздатьНаборЗаписей();
		
		Блокировка = Новый БлокировкаДанных;
		Блокировка.Добавить("РегистрСведений.УдалитьБезопасноеХранилищеДанныхОбластейДанных");
		Блокировка.Заблокировать();
		
		Запрос = Новый Запрос;
		Запрос.Текст =
			"ВЫБРАТЬ
			|	УдалитьБезопасноеХранилищеДанныхОбластейДанных.Владелец,
			|	УдалитьБезопасноеХранилищеДанныхОбластейДанных.Данные
			|ИЗ
			|	РегистрСведений.УдалитьБезопасноеХранилищеДанныхОбластейДанных КАК УдалитьБезопасноеХранилищеДанныхОбластейДанных";
		
		РезультатЗапроса = Запрос.Выполнить();
		
		ВыборкаДетальныеЗаписи = РезультатЗапроса.Выбрать();
		
		Пока ВыборкаДетальныеЗаписи.Следующий() Цикл
			Запись = НаборЗаписей.Добавить();
			ЗаполнитьЗначенияСвойств(
				Запись,
				ВыборкаДетальныеЗаписи);
			Запись.ОбластьДанныхВспомогательныеДанные = ОбластьДанных;
		КонецЦикла;
		
		ОбновлениеИнформационнойБазы.ЗаписатьДанные(НаборЗаписей);
		ОбновлениеИнформационнойБазы.ЗаписатьДанные(НаборЗаписейУдалить);
		ЗафиксироватьТранзакцию();
	Исключение
		ОтменитьТранзакцию();
		ВызватьИсключение;
	КонецПопытки;
	
КонецПроцедуры

