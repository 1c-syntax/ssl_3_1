			ЗаписьXML.ЗаписатьКонецЭлемента();

		ИначеЕсли ДанныеДоверенности.ТипОрганизации = "ИП" Тогда

			ЗаписьXML.ЗаписатьНачалоЭлемента("ИПДовер");
			ЗаписьXML.ЗаписатьАтрибут("НаимИП", ДанныеДоверенности.ДоверительЮЛ_НаимОрг);
