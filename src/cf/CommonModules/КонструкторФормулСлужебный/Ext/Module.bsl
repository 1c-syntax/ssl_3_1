Процедура ЗаполнитьДеревоПоДоступнымПолям(СтрокаДерева, ДоступныеПоля)
	Для Каждого ДоступноеПоле Из ДоступныеПоля.Элементы Цикл
		НоваяСтрока = СтрокаДерева.Строки.Добавить();
		ЗаполнитьЗначенияСвойств(НоваяСтрока, ДоступноеПоле);
		НоваяСтрока.Идентификатор = Строка(ДоступноеПоле.Поле);
		Родитель = ДоступноеПоле.Родитель;
		
		Если Родитель <> Неопределено И СтрНачинаетсяС(НоваяСтрока.Идентификатор, Строка(Родитель.Поле)) Тогда
			НоваяСтрока.Идентификатор = Сред(НоваяСтрока.Идентификатор, СтрДлина(Строка(Родитель.Поле)) + 2);
		КонецЕсли;
			
		НоваяСтрока.Представление = ДоступноеПоле.Заголовок;
		НоваяСтрока.Папка = ДоступноеПоле.Папка И Не ДоступноеПоле.Таблица;
		Если (ДоступноеПоле.Папка Или ДоступноеПоле.Таблица) И ДоступноеПоле.Элементы.Количество() <> 0 Тогда
			ЗаполнитьДеревоПоДоступнымПолям(НоваяСтрока, ДоступноеПоле);
		КонецЕсли;
	КонецЦикла;
КонецПроцедуры

