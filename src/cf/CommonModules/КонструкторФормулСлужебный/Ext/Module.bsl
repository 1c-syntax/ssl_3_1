	Отбор = Форма[ИмяРеквизитаСтрокиПоиска];
	ОтборУстановлен = ЗначениеЗаполнено(Отбор);
	Если ЗначениеЗаполнено(Отбор) Тогда
		УстановитьОтбор(Форма, ИмяСпискаПолей, Отбор, Форма[ИмяСпискаПолей]);
	КонецЕсли;
	Форма.Элементы[ИмяСпискаПолей + "Представление"].Видимость = НЕ ОтборУстановлен;
	Форма.Элементы[ИмяСпискаПолей + "ПредставлениеПутиКДанным"].Видимость = ОтборУстановлен;
	Форма.Элементы[ИмяСпискаПолей].Отображение = ?(ОтборУстановлен, ОтображениеТаблицы.Список, ОтображениеТаблицы.Дерево);
	
КонецПроцедуры

Процедура УстановитьОтбор(Знач Форма, Знач ИмяСписка, Знач Отбор,
	Знач КоллекцияРеквизитов = Неопределено, Знач Уровень = 0)
	
	ТекущийСеанс = ПолучитьТекущийСеансИнформационнойБазы().ПолучитьФоновоеЗадание();
	ЭтоФоновоеЗадание = (ТекущийСеанс <> Неопределено);
	
	КоличествоВПорции = 10;
	МаксимальноеКоличествоРезультатов = 200;
	МаксимальныйУровеньПоиска = ?(ЭтоФоновоеЗадание, 3, 2);
	ДостигнутоМаксимальноеКоличествоРезультатов = Ложь;
	
	СтруктураОтбора = Новый Структура("СоответствуетОтбору", Истина);
	Уровень = 1;					   
	КоличествоНайденных = 0;
	ОписаниеТипаВсеСсылки = ОбщегоНазначения.ОписаниеТипаВсеСсылки();
	
	СтрокиПорции = Новый Массив;
	ВсеНайденныеСтроки = Новый Массив;
	Пока Истина Цикл	
		ИспользованныеУзлы = Новый Соответствие;
		Пока Истина Цикл
			ПорцияПолейТекущегоУровня = ПолучитьПорциюПолейЗаданногоУровня(КоллекцияРеквизитов, Уровень, ИспользованныеУзлы,  ИмяСписка, Форма);
			Если ПорцияПолейТекущегоУровня = Неопределено Тогда
				Прервать;
			КонецЕсли;
			УстановитьПризнакОтбора(КоличествоНайденных, МаксимальноеКоличествоРезультатов, ПорцияПолейТекущегоУровня, Отбор);
			Если КоличествоНайденных = МаксимальноеКоличествоРезультатов Тогда
				ДостигнутоМаксимальноеКоличествоРезультатов = Истина;
				Прервать;	
			КонецЕсли;
			Если ЭтоФоновоеЗадание Тогда
				МассивНайденныхЭлементов = ПорцияПолейТекущегоУровня.Строки.НайтиСтроки(СтруктураОтбора, Истина);
				Если МассивНайденныхЭлементов.Количество()  <> 0 Тогда
					Для Каждого НайденныйЭлемент Из МассивНайденныхЭлементов Цикл
						СтруктураСтроки = СтрокуДереваВСтруктуру(НайденныйЭлемент, КоллекцияРеквизитов);
						СтрокиПорции.Добавить(СтруктураСтроки);
						ВсеНайденныеСтроки.Добавить(СтруктураСтроки);
						Если СтрокиПорции.Количество() = КоличествоВПорции Тогда
							ОтправитьПорциюНайденных(СтрокиПорции, ОписаниеТипаВсеСсылки);
						КонецЕсли;
					КонецЦикла;
				КонецЕсли;
			КонецЕсли;
		КонецЦикла;
		
		Если Уровень > 1 Тогда 
			Если ЭтоФоновоеЗадание Тогда
				ОтправитьПорциюНайденных(СтрокиПорции, ОписаниеТипаВсеСсылки);
			КонецЕсли;
		КонецЕсли;
		
		Уровень = Уровень + 1;
		Если ДостигнутоМаксимальноеКоличествоРезультатов Или Уровень > МаксимальныйУровеньПоиска  Тогда
			Прервать;
		КонецЕсли;
		
	КонецЦикла;
	
	Если ЭтоФоновоеЗадание Тогда
		ОтправитьПорциюНайденных(ВсеНайденныеСтроки, ОписаниеТипаВсеСсылки);
	КонецЕсли;
	
КонецПроцедуры

Процедура ОтправитьПорциюНайденных(НайденныеСтроки, ОписаниеТипаВсеСсылки = Неопределено)
	Если ОписаниеТипаВсеСсылки = Неопределено Тогда
		ОписаниеТипаВсеСсылки = ОбщегоНазначения.ОписаниеТипаВсеСсылки();
	КонецЕсли;
	Результат = Новый Структура("НайденныеЭлементы", НайденныеСтроки);
	Результат.Вставить("ОписаниеТипаВсеСсылки", ОписаниеТипаВсеСсылки);
	ОбщегоНазначения.СообщитьПользователю(ОбщегоНазначения.ЗначениеВСтрокуXML(Результат));
	НайденныеСтроки.Очистить();
КонецПроцедуры

Функция СтрокуДереваВСтруктуру(СтрокаДерева, Дерево)
	
	Колонки = Новый Массив();
	Для Каждого Колонка Из Дерево.Колонки Цикл
		Колонки.Добавить(Колонка.Имя);
	КонецЦикла;
	
	КолонкиСтрокой = СтрСоединить(Колонки, ",");
	
	Результат = Новый Структура(КолонкиСтрокой);
	ЗаполнитьЗначенияСвойств(Результат, СтрокаДерева);
			
	Возврат Результат;
	
КонецФункции

Процедура УстановитьПризнакОтбора(КоличествоНайденных, Знач МаксимальноеКоличествоРезультатов, Знач КоллекцияРеквизитов, Знач Отбор)
	
	Для Каждого Реквизит Из ПодчиненныеЭлементы(КоллекцияРеквизитов) Цикл
		Если КоличествоНайденных = МаксимальноеКоличествоРезультатов Тогда
			Возврат;	
		КонецЕсли;
		Если РодительскийРеквизитСоответствуетОтбору(Реквизит) Тогда
			Реквизит.СоответствуетОтбору = Ложь;
		Иначе
			ФорматированнаяСтрока = НайтиТекстВСтроке(Реквизит.ПредставлениеПутиКДанным, Отбор);
			Реквизит.СоответствуетОтбору = ФорматированнаяСтрока <> Неопределено;
			Если Реквизит.СоответствуетОтбору Тогда
				КоличествоНайденных = КоличествоНайденных + 1;
				Реквизит.ПредставлениеПутиКДанным = ФорматированнаяСтрока;
				РодительРеквизита = Родитель(Реквизит);
				Если РодительРеквизита <> Неопределено Тогда
					РодительРеквизита.ПодчиненныйЭлементСоответствуетОтбору = Истина;
				КонецЕсли;
			КонецЕсли;
		КонецЕсли;
	КонецЦикла;

КонецПроцедуры

Функция ПолучитьПорциюПолейЗаданногоУровня(КоллекцияРеквизитов, Уровень, ИспользованныеУзлы,  ИмяСписка, Форма)
	Если Уровень = 1 Тогда
		Если ИспользованныеУзлы.Получить(-1) <> Неопределено Тогда
			Возврат Неопределено;
		Иначе
			ИспользованныеУзлы.Вставить(-1, Истина);
			Возврат КоллекцияРеквизитов;
		КонецЕсли;
	КонецЕсли;
	Возврат ПолучитьКоллекциюУровня(КоллекцияРеквизитов, Уровень, ИспользованныеУзлы,  ИмяСписка, Форма);
КонецФункции    

Функция ПолучитьИдентификатор(Элемент)
	Если ТипЗнч(Элемент) = Тип("ДанныеФормыЭлементДерева") Тогда
		Возврат Элемент.ПолучитьИдентификатор();
	ИначеЕсли ТипЗнч(Элемент) = Тип("СтрокаДереваЗначений") Тогда
		Возврат Элемент.Идентификатор;
	КонецЕсли;
	
	Возврат Неопределено;
КонецФункции

Функция ПолучитьКоллекциюУровня(КоллекцияРеквизитов, Уровень, ИспользованныеУзлы,  ИмяСписка, Форма, ТекущийУровень = 1, ИндексРодителя = "")
	Если Уровень = ТекущийУровень Тогда
		ИдентификаторРеквизита = ИндексРодителя;
		ИспользованныеУзлы.Вставить(ИдентификаторРеквизита, Истина);
		Возврат КоллекцияРеквизитов;
	КонецЕсли;

	ЭлементыКоллекции = ПодчиненныеЭлементы(КоллекцияРеквизитов);
	
	Для Каждого Реквизит Из ЭлементыКоллекции Цикл
		ИдентификаторРеквизита = ПолучитьИдентификатор(Реквизит);
		Если ИспользованныеУзлы.Получить(ИдентификаторРеквизита) = Неопределено Тогда
			Если ЭлементыКоллекции.Количество() = ЭлементыКоллекции.Индекс(Реквизит)+1 Тогда
				РодительКоллекции = Родитель(КоллекцияРеквизитов);
				Если РодительКоллекции <> Неопределено Тогда
					ИспользованныеУзлы.Вставить(ИндексРодителя, Истина);
				КонецЕсли;
			КонецЕсли;
			
			Если Уровень = ТекущийУровень + 1 Тогда
				Если Не Реквизит.СоответствуетОтбору Тогда
					РазвернутьРеквизит(ИдентификаторРеквизита, ИмяСписка, Форма);
				КонецЕсли;
			КонецЕсли;
			 
			Коллекция = ПолучитьКоллекциюУровня(Реквизит, Уровень, ИспользованныеУзлы,  ИмяСписка, Форма, ТекущийУровень + 1, ИдентификаторРеквизита); 		
			
			Если Коллекция <> Неопределено Тогда
				Возврат Коллекция;
			КонецЕсли; 
		КонецЕсли;
	КонецЦикла;
КонецФункции

Функция РодительскийРеквизитСоответствуетОтбору(Реквизит)
	
	Родитель = Родитель(Реквизит);
	
	Если Родитель <> Неопределено Тогда
		Возврат Родитель.СоответствуетОтбору Или РодительскийРеквизитСоответствуетОтбору(Родитель);
	КонецЕсли;
	
